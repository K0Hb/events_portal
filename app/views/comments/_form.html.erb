<%= form_for [@event, comment], data: { turbo:false } do |f| %>
    <%= render partial: 'partials/form_errors', locals: {model: comment} %>

    <div class="form-group">
      <%= f.label t('view.comment') %>
      <%= f.text_area :body, class: 'form-control' %>
    </div>

    <% unless user_signed_in? %>
        <div class="form-group">
          <%= f.label t('devise.registrations.new.name') %>
          <%= f.text_field :user_name, class: 'form-control' %>
        </div>
    <% end %>

    <div class="actions mt-2">
      <%= f.submit t('view.push'), class: 'btn btn-primary' %>
    </div>
<% end %>