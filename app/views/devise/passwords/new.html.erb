<div class="col-md-6">
  <h2><%= t('.forgot_your_password') %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo:false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: 'form-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: t('.email'), class: 'form-control form-control-sm' %>
    </div>

    <div class="actions">
      <%= f.submit t('.password_instructions'), class: 'btn btn-primary mt-2' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
