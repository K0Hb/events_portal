<div class="col-sm-6 col-md-4">
  <div class="thumbnail mt-2 mb-2">
    <div class="event-background" style="background-image: url(<%= event_photo(event) %>">
      <div class="thumbnail-inner event-info-inner">
        <div class="caption">
          <div class="event-description">
            <h3><%= link_to event.title, event_path(event) %></h3>
            <h3>
              <small><%= l event.datetime, format: :short %></small>
            </h3>
            <div class="buffer-both"><%= event.address %></div>
          </div>
          <div>
            <% event.visitors.each do |user| %>
              <span class="user-avatar">
                <%= image_tag user_avatar_thumb(user), class: 'img-i m-1 rounded-circle', title: user.name %>
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

