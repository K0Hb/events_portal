<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <div class="event-background" style="background-image: url(<%= "#{asset_path('event.jpg')})" %>">

        <div class="event-info-inner row">
          <div class="col-md-6">

            <div class="event-description">
              <h1><%= @event.title %></h1>
              <h3><%= l @event.datetime, format: :short %></h3>
              <h3>
                <small><%= link_to @event.address, "https://yandex.ru/maps/?text=#{@event.address}"%></small>
              </h3>

              <p><%= @event.description %></p>
            </div>

            <% if current_user_can_edit?(@event) %>
              <div class="buffer-both">
                <%= link_to 'Изменить', edit_event_path(@event), class: 'btn btn-primary ms-2 mt-2' %>
                <%= button_to "Удалить", event_path(@event), method: :delete, class: 'btn btn-danger ms-2 mb-3 mt-2',form: { data: {turbo_confirm: t('are_you_sure')} }%>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="event-photos">
        <div class="event-photos-gallery">
          <% if @event.photos.present? %>
            <%= render partial: 'photos/photo', collection: @event.photos.except(@new_photo) %>
          <% end %>
        </div>

        <div class="event-photo-form mt-2">
          <%= render partial: 'photos/form', locals: {photo: @new_photo || @event.photos.build} %>
        </div>
      </div>

      <div class="event-comments buffer-top mt-2">
        <%= render partial: 'comments/form',
          locals: {comment: @new_comment || @event.comments.build} %>

        <div class="buffer-both">
          <%= render partial: 'comments/comment',
            collection: @event.comments.except(@new_comment) %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div id="map" data-address="<%= @event.address %>" class="event-map mt-2 mb-2", style="width: auto; height: 350px"></div>
      <div class="event-owner">
        <h4><%= t('view.calling') %></h4>
        <p><%= render partial: 'users/user', object: @event.user %></p>
      </div>
      <% if  @event.subscriptions.second.present? %>
        <div class="event-subscriptions">
          <h4><%= t('view.they_will_go') %></h4>
          <div>
            <p>
            <%= render partial: 'subscriptions/subscription',
              collection: @event.subscriptions.except(@new_subscription) %>
            </p>
          </div>
        </div>
      <% end %>
      <% unless @event.user == current_user %>
        <div class="event-subscription-form">
          <h4><%= t('view.i_go') %></h4>
          <div>
            <%= render partial: 'subscriptions/form', locals: {
              subscription: @new_subscription || @event.subscriptions.build
            } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
