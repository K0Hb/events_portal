<% errors = model.errors %>

<% if errors.any? %>
  <div class="alert alert-danger">
    <div class="lead buffer-bottom">
      <%= t('view.in_you_form') %> <%= t("errors.messages.not_saved", count: errors.count) %>
    </div>

    <ul class="alert alert-danger">
      <% errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
